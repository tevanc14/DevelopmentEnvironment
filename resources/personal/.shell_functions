gitGetMasterChanges() {
    BRANCH="$(git name-rev --name-only HEAD)"
    git stash save -u
    git checkout master
    git merge ${BRANCH}
    gco ${BRANCH}
    git stash pop
}

copyDevConfigs() {
    DEV_ENV_DIR="/home/tevan/dev/projects/DevelopmentEnvironment"
    DEST_DIR=${DEV_ENV_DIR}/resources/personal
    cp /home/tevan/.shell_aliases \
       /home/tevan/.shell_functions \
       /home/tevan/.zshrc \
       /home/tevan/.config/terminator/config \
       /home/tevan/.xbindkeysrc \
       /etc/environment \
       ${DEST_DIR}
    cd ${DEV_ENV_DIR}
    mv ${DEST_DIR}/config ${DEST_DIR}/terminator.config
}

encryptCodemagicFirebase() {
    if [[ "$#" -ne 1 ]]; then
        echo "Need the key as an argument"
    else
        PASSWORD=${1}
        # These lines are the updated, non-deprecated cipher. But codemagic doesn't use it yet, so we use the old one
        #openssl enc -aes-256-cbc -md sha512 -pbkdf2 -iter 1000 -salt -in ios/Runner/GoogleService-Info.plist -out ios/Runner/GoogleService-Info.enc -k "${PASSWORD}"
        #openssl enc -aes-256-cbc -md sha512 -pbkdf2 -iter 1000 -salt -in android/app/google-services.json -out android/app/google-services.enc -k "${PASSWORD}"

        # Have to use libressl because that's what's on codemagic
        /usr/local/bin/openssl enc -aes-256-cbc -md sha512 -salt -in ios/Runner/GoogleService-Info.plist -out ios/Runner/GoogleService-Info.enc -k "${PASSWORD}"
        /usr/local/bin/openssl enc -aes-256-cbc -md sha512 -salt -in android/app/google-services.json -out android/app/google-services.enc -k "${PASSWORD}"
    fi
}

open() {
    if [[ "$#" -ne 1 ]]; then
        echo "Need an argument to open"
        exit
    else
        nohup xdg-open "${1}" >/dev/null 2>&1
    fi
}
