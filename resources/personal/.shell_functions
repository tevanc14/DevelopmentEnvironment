gitGetMasterChanges() {
    BRANCH="$(git name-rev --name-only HEAD)"
    git stash save -u
    git checkout master
    git merge ${BRANCH}
    gco ${BRANCH}
    git stash pop
}

copyDevConfigs() {
    DEV_ENV_DIR="/home/tevan/dev/projects/DevelopmentEnvironment"
    DEST_DIR=${DEV_ENV_DIR}/resources/personal
    cp /home/tevan/.shell_aliases \
       /home/tevan/.shell_functions \
       /home/tevan/.zshrc \
       /home/tevan/.config/terminator/config \
       /home/tevan/.xbindkeysrc \
       /etc/environment \
       ${DEST_DIR}
    cd ${DEV_ENV_DIR}
    mv ${DEST_DIR}/config ${DEST_DIR}/terminator.config
}

encryptCodemagicFirebase() {
    PASSWORD=${1}
    openssl enc -aes-256-cbc -iter 1000 -salt -in ios/Runner/GoogleService-Info.plist -out ios/Runner/GoogleService-Info.enc -k "${PASSWORD}"
    openssl enc -aes-256-cbc -iter 1000 -salt -in android/app/google-services.json -out android/app/google-services.enc -k "${PASSWORD}"
}
