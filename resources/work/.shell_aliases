# Text formatting
alias prettier_clipboard="pbpaste > tmp.json && prettier --write tmp.json && cat tmp.json | pbcopy && rm tmp.json"
alias json_key_quote="pbpaste | sed -E 's/(([a-zA-Z\d])+)(:)/\"\1\"\3/g' | pbcopy"

