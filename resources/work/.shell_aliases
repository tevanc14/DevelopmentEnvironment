# Pip
alias pip_update="pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U"

# Virtual Environment
alias activate="source venv/bin/activate"
alias make_venv="python3 -m venv venv"

# Git
